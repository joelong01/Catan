        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <local:StringToIntListConverter x:Key="StringToIntListConverter" />
        <local:ColorToColorChoice x:Key="ColorToColorChoiceConverter" />
