<ContentDialog x:Name="_dlg"
    x:Class="Catan10.ErrorDlg"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Catan10"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Catan"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    PrimaryButtonText="Close" RequestedTheme="Dark"
    mc:Ignorable="d">

    <StackPanel Width="600" Background="Black">
        <TextBlock Margin="10" Foreground="White" Text="{x:Bind Message}" />
        <TextBox
            Height="200"
            Margin="10"
            AcceptsReturn="True" FontFamily="Lucida Console"
            FontSize="12" Foreground="White"
            Header="Extended Error Information"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            Text="{x:Bind ExtendedMessage}"
            Visibility="{x:Bind HideIfEmpty(ExtendedMessage)}" />
    </StackPanel>

</ContentDialog>
