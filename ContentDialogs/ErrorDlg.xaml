<ContentDialog x:Class="Catan10.ErrorDlg"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Catan10"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="_dlg" Title="Catan" RequestedTheme="Dark" PrimaryButtonText="Close"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick" mc:Ignorable="d">

    <StackPanel Width="600" Background="Black">
        <TextBlock Margin="10" Text="{x:Bind Message}" Foreground="White" />
        <TextBox Height="200" Margin="10"
            Text="{x:Bind ExtendedMessage}"
            Visibility="{x:Bind HideIfEmpty(ExtendedMessage)}"
            Foreground="White" FontFamily="Lucida Console" AcceptsReturn="True"
            FontSize="12" Header="Extended Error Information"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            ScrollViewer.VerticalScrollBarVisibility="Auto" />
    </StackPanel>

</ContentDialog>
