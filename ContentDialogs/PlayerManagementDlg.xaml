                        <ComboBox Width="300" Margin="0,4,0,0" VerticalAlignment="Center"
                            AllowFocusOnInteraction="True"
                            ItemTemplate="{StaticResource ColorChoiceDataTemplate}"
                            ItemsSource="{x:Bind SecondaryColors, Mode=OneTime}"
                            SelectedItem="{x:Bind SecondaryColor, Mode=TwoWay}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="10" VerticalAlignment="Center" Text="Foreground: " FontSize="28" />
                        <ComboBox Width="300" Margin="0,4,0,0" VerticalAlignment="Center"
                            ItemTemplate="{StaticResource ColorChoiceDataTemplate}"
