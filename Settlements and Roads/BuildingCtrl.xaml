<UserControl
    x:Class="Catan10.BuildingCtrl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Catan10"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="30"
    IsHitTestVisible="True"
    d:DesignWidth="30">

    <!-- The actual Settlement/City UI is dynamically created to speed up loading.  here we just hold the ViewBoxes and Canvases to control Visibility -->

    <Grid Name="LayoutRoot" PointerEntered ="Building_PointerEntered" PointerExited =  "Building_PointerExited" PointerPressed = "Building_PointerPressed" Background="Transparent">

        <Grid Name="GRID_Pips" Visibility="{x:Bind BuildingState, FallbackValue=Collapsed, ConverterParameter=Pips, Mode=OneWay, Converter={StaticResource ResourceKey=BuildingStateToVisibilityConverter}}">
            <Ellipse Name="_pipEllipse"  Width="30" Height="30" Fill="{x:Bind Path=CurrentPlayer.Background , Mode=OneWay, FallbackValue=Green, Converter={StaticResource ResourceKey=ColorToBrushConverter}}"  />
            <TextBlock Text="{x:Bind Pips, FallbackValue=2, Converter={StaticResource ResourceKey=IntToStringConverter}}" 
                       Foreground="{x:Bind Path=CurrentPlayer.Foreground, Mode=OneWay, FallbackValue=White, Converter={StaticResource ResourceKey=ColorToBrushConverter}}"
                       CharacterSpacing="0" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="0"  FontSize="32" Margin="6,-9,5,-4" />
        </Grid>

        <Grid Opacity="1" Name="GRID_Build"
             Visibility="{x:Bind BuildingState, FallbackValue=Collapsed, ConverterParameter=Build, Mode=OneWay, Converter={StaticResource ResourceKey=BuildingStateToVisibilityConverter}}">
            <Ellipse Width="30" Height="30" Fill="{x:Bind Path=CurrentPlayer.Background, Mode=OneWay, FallbackValue=Green, Converter={StaticResource ResourceKey=ColorToBrushConverter}}"  />
            
        </Grid>

        <Grid Opacity=".25" Name="GRID_Error"
             Visibility="{x:Bind BuildingState, FallbackValue=Collapsed, ConverterParameter=Error, Mode=OneWay, Converter={StaticResource ResourceKey=BuildingStateToVisibilityConverter}}">
            <Ellipse Width="30" Height="30" Fill="{x:Bind Path=CurrentPlayer.Background, Mode=OneWay, FallbackValue=Green, Converter={StaticResource ResourceKey=ColorToBrushConverter}}"  />
            <TextBlock x:Name="_txtPipCount" Text="X" CharacterSpacing="0" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="0"  FontSize="32" Margin="6,-9,5,-4" 
                       Foreground="{x:Bind Path=CurrentPlayer.Foreground, Mode=OneWay, FallbackValue=White, Converter={StaticResource ResourceKey=ColorToBrushConverter}}"/>
        </Grid>

        <Canvas Name="CANVAS_City"
                Width="{Binding ElementName=LayoutRoot, Path=ActualWidth, Mode=TwoWay}" Height="{Binding ElementName=LayoutRoot, Path=ActualHeight}" Background="Transparent" 
                Visibility="{x:Bind BuildingState, FallbackValue=Collapsed, ConverterParameter=City, Mode=OneWay, Converter={StaticResource ResourceKey=BuildingStateToVisibilityConverter}}">
            <Viewbox Name="_vbCity" Width="30" Height="30" Stretch="Uniform">
                <local:CityCtrl Width="30" Height="30" CastleColor="{x:Bind Path=Owner.Foreground, FallbackValue=Black, Mode=OneWay}" 
                                CircleFillColor="{x:Bind Path=Owner.Background, FallbackValue=White, Mode=OneWay}"/>
            </Viewbox>
        </Canvas>

        <Canvas Name="CANVAS_Settlement"
                Width="{Binding ElementName=LayoutRoot, Path=ActualWidth, Mode=TwoWay}" Height="{Binding ElementName=LayoutRoot, Path=ActualHeight}" Background="Transparent" 
                Visibility="{x:Bind BuildingState, FallbackValue=Visible, ConverterParameter=Settlement, Mode=OneWay, Converter={StaticResource ResourceKey=BuildingStateToVisibilityConverter}}">
            <Viewbox Name="_vbSettlement" Width="30" Height="30" Stretch="Uniform">
                <local:SettlementCtrl Width="30" Height="30" 
                                      CastleColor="{x:Bind Path=Owner.Foreground, FallbackValue=Black,Mode=OneWay}" 
                                      CircleFillColor="{x:Bind Path=Owner.Background, FallbackValue=White, Mode=OneWay}"/>
            </Viewbox>
        </Canvas>


    </Grid>


</UserControl>
