                        <TextBlock Text="{x:Bind PipGroup, FallbackValue=2, Mode=OneWay,Converter={StaticResource ResourceKey=IntToStringConverter}}"
                                  Foreground="{x:Bind Path=CurrentPlayer.ForegroundBrush, Mode=OneWay}"
