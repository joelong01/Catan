<UserControl x:Class="Catan10.SettlementCtrl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="using:Catan10"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DesignHeight="100" d:DesignWidth="100"
        mc:Ignorable="d">

    <!--  Converted from svg with ViewerSvg and Ab2d.ReaderSvg  -->
    <Viewbox Stretch="Fill">
        <Grid Width="100" Height="100">
            <Ellipse Width="95" Height="95" StrokeThickness="2"
                    Stroke="{x:Bind GetForegroundBrush(CurrentPlayer, Owner), Mode=OneWay}"
                    Fill="{x:Bind GetBackgroundBrush(CurrentPlayer, Owner), Mode=OneWay}"
                    Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <Viewbox Stretch="Uniform">
                <TextBlock Text="&#x2656;" Padding="0" HorizontalAlignment="Center" VerticalAlignment="Center"
                        Margin="0,-2, 0, 0"
                        Foreground="{x:Bind GetForegroundBrush(CurrentPlayer, Owner), Mode=OneWay}"
                        FontFamily="Segoe UI Symbol" />
            </Viewbox>

        </Grid>
    </Viewbox>

</UserControl>
