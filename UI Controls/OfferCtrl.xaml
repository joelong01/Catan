<UserControl x:Class="Catan10.OfferCtrl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Catan10"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="650" d:DesignWidth="400" mc:Ignorable="d">
    <Grid>

        <StackPanel Width="400" Margin="0,0,0,0"
            Visibility="{x:Bind Not(ListLayout), Mode=OneWay}"
            Background="{x:Bind TheHuman.BackgroundBrush, Mode=OneWay, TargetNullValue=Red, FallbackValue=Red}"
            BorderBrush="Gold" BorderThickness="1" CornerRadius="10">
            <Ellipse Width="48" Height="48" Margin="10,10,0,0" HorizontalAlignment="Left"
                VerticalAlignment="Center" PointerPressed="OnCreatedByPressed"
                Fill="{x:Bind TheHuman.ImageBrush, Mode=OneWay}"
                Stroke="{x:Bind TheHuman.ForegroundBrush, Mode=OneWay, TargetNullValue=Red, FallbackValue=Red}" />


            <TextBlock Margin="0" VerticalAlignment="Center" Text="Trading With: " Foreground="Black"
                FontSize="32" />
            <StackPanel Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center"
                Orientation="Horizontal" Background="Transparent">

                <!--  Trading Partners  -->
                <GridView Margin="0,0,0,0" HorizontalAlignment="Right" VerticalAlignment="Center"
                    BorderBrush="White" BorderThickness="0"
                    ItemsSource="{x:Bind TradeWith(TradePartners), Mode=OneWay}"
                    ScrollViewer.VerticalScrollBarVisibility="Disabled" SelectionMode="None">
                    <GridView.ItemTemplate>
                        <DataTemplate x:DataType="local:PlayerTradeTracker">
                            <ToggleButton Width="50" Height="50" Margin="0,6,0,0" Padding="0"
                                VerticalAlignment="Center" Click="OnClickTradingPartner"
                                IsChecked="{x:Bind InTrade, Mode=TwoWay}"
                                Tag="{x:Bind Mode=OneWay}">
                                <ToggleButton.Content>
                                    <Ellipse Width="45" Height="45" Margin="0" HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Fill="{x:Bind local:OfferCtrl.PlayerIdToBrush(PlayerIdentifier), Mode=OneWay}"
                                        Stroke="White" />
                                </ToggleButton.Content>
                            </ToggleButton>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
                <Border Width="50" Height="50" Margin="5,0,0,0" HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="{x:Bind ShowAllButton, Mode=OneWay}"
                    Background="{x:Bind TheHuman.BackgroundBrush, Mode=OneWay}"
                    CornerRadius="5">
                    <Button Padding="0" HorizontalAlignment="Center" Click="OnClickAll" 
                            Foreground="{x:Bind TheHuman.ForegroundBrush, Mode=OneWay}">
                        <Button.Content>
                            <Viewbox Width="50">
                                <StackPanel>
                                    <TextBlock HorizontalAlignment="Center" Text="" FontFamily="Segoe UI Symbol" FontSize="18" />
                                    <TextBlock HorizontalAlignment="Center" Text="All" FontSize="12" FontFamily="Segoe Symbol" />
                                </StackPanel>
                            </Viewbox>
                        </Button.Content>
                    </Button>
                </Border>
            </StackPanel>

            <TextBlock Margin="5,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center"
                Foreground="{x:Bind TheHuman.ForegroundBrush, Mode=OneWay, TargetNullValue=Red, FallbackValue=Red}"
                FontSize="32" Text="Offer" />




            <!--  My Offer  -->
            <local:TradeResourcesCtrl Grid.Row="1" Margin="5,0,0,0"
                ShowButtons="{x:Bind ShowResourceButtons, Mode=OneWay}"
                TradeResources="{x:Bind TradeOffer.Offer, Mode=OneWay}"
                OnResourceChanged="OnOfferChanged" />

            <!--  Divider  -->
            <Rectangle Height="2" Margin="10,10,10,0" HorizontalAlignment="Stretch" Fill="{x:Bind TradeOffer.Owner.ForegroundBrush, Mode=OneWay}" />

            <TextBlock Grid.Column="2" Margin="5,0,0,0" HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Foreground="{x:Bind TheHuman.ForegroundBrush, Mode=OneWay, TargetNullValue=Red, FallbackValue=Red}"
                FontSize="32" Text="Desire" />

            <!--  My Desire  -->
            <local:TradeResourcesCtrl Grid.Row="1" Grid.Column="2"
                TradeResources="{x:Bind TradeOffer.Desire, Mode=OneWay}"
                ShowButtons="{x:Bind ShowResourceButtons, Mode=OneWay}"
                OnResourceChanged="OnDesireChanged" />

            <!--  Approvals  -->
            <StackPanel Grid.Row="3" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="3"
                Width="150" Margin="0,10,0,0" HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                IsHitTestVisible="{x:Bind OwnerHitTest(TheHuman), Mode=OneWay}"
                BorderBrush="{x:Bind TheHuman.ForegroundBrush, Mode=OneWay}"
                BorderThickness="1" CornerRadius="10">
                <TextBlock Margin="0,0,0,0" HorizontalAlignment="Center" Text="Approvals" Foreground="{x:Bind TheHuman.ForegroundBrush, Mode=OneWay}" />
                <StackPanel Orientation="Horizontal">
                    <Ellipse Width="30" Height="30" Margin="10,0,0,0" HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Fill="{x:Bind TheHuman.ImageBrush, Mode=OneWay}"
                        Stroke="Black" />
                    <ToggleSwitch Margin="10,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"
                        Style="{StaticResource CatanToggleSwitch}"
                        Foreground="{x:Bind TheHuman.ForegroundBrush, Mode=OneWay, TargetNullValue=Red, FallbackValue=Red}"
                        Background="Red"
                        IsOn="{x:Bind TradeOffer.OwnerApproved, Mode=TwoWay}">
                        <ToggleSwitch.OnContent>
                            <TextBlock Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"
                                FontFamily="Segoe UI Symbol" FontSize="22"
                                Foreground="{x:Bind TheHuman.ForegroundBrush, Mode=OneWay}"
                                Text="&#xE19F;" />
                        </ToggleSwitch.OnContent>
                        <ToggleSwitch.OffContent>
                            <TextBlock Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"
                                FontFamily="Segoe UI Symbol" FontSize="22"
                                Foreground="{x:Bind TheHuman.ForegroundBrush, Mode=OneWay}"
                                Text="&#xE19E;" />
                        </ToggleSwitch.OffContent>
                    </ToggleSwitch>
                </StackPanel>
                <!--  Partner approval  -->
                <StackPanel Orientation="Horizontal" Visibility="{x:Bind ShowPartnerApproval, Mode=OneWay}">
                    <Ellipse Width="30" Height="30" Margin="10,0,0,0" HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Fill="{x:Bind PartnerImageBrush(TradeOffer.TradePartners), Mode=OneWay, TargetNullValue=Blue}"
                        Stroke="Black" />

                    <ToggleSwitch Margin="10,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"
                        IsHitTestVisible="{x:Bind PartnerHitTest(TradeOffer.TradePartners), Mode=OneWay}"
                        Foreground="{x:Bind TradeOffer.Owner.ForegroundBrush, Mode=OneWay, TargetNullValue=Red, FallbackValue=Red}"
                        Style="{StaticResource CatanToggleSwitch}"
                        IsOn="{x:Bind TradeOffer.PartnerApproved, Mode=TwoWay}">
                        <ToggleSwitch.OnContent>
                            <TextBlock Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"
                                FontFamily="Segoe UI Symbol" FontSize="22"
                                Foreground="{x:Bind TheHuman.ForegroundBrush, Mode=OneWay}"
                                Text="&#xE19F;" />
                        </ToggleSwitch.OnContent>
                        <ToggleSwitch.OffContent>
                            <TextBlock Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"
                                FontFamily="Segoe UI Symbol" FontSize="22"
                                Foreground="{x:Bind TheHuman.ForegroundBrush, Mode=OneWay}"
                                Text="&#xE19E;" />
                        </ToggleSwitch.OffContent>
                    </ToggleSwitch>
                </StackPanel>
            </StackPanel>
            <!--  Buttons  -->
            <Grid Height="80" Margin="0,0,0,10" HorizontalAlignment="Stretch">
                <!--  Reset Button  -->
                <Button Grid.Row="3" Grid.Column="0" Width="100" Height="75"
                    Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                    CornerRadius="10" Click="OnReset"
                    Visibility="{x:Bind ShowResetButton, Mode=OneWay}"
                    Foreground="{x:Bind TheHuman.ForegroundBrush, Mode=OneWay, FallbackValue=White, TargetNullValue=White}">
                    <Button.Content>
                        <StackPanel>
                            <TextBlock HorizontalAlignment="Center" Text="&#xE0D9;" FontFamily="Segoe UI Symbol" FontSize="22" />
                            <TextBlock Text="Reset" FontSize="22" />
                        </StackPanel>
                    </Button.Content>
                </Button>
                <!--  Send Button  -->
                <Button Width="100" Height="75" Margin="0,0,10,0" HorizontalAlignment="Right"
                    VerticalAlignment="Bottom" Click="OnSendClicked" CornerRadius="10"
                    Visibility="{x:Bind ShowSendButton, Mode=OneWay}"
                    Foreground="{x:Bind TheHuman.ForegroundBrush, Mode=OneWay}"
                    IsEnabled="{x:Bind EnableSend, Mode=OneWay}">
                    <Button.Content>
                        <StackPanel>
                            <TextBlock HorizontalAlignment="Center" Text="&#xE122;" FontFamily="Segoe MDL2 Assets" FontSize="22" />
                            <TextBlock Text="Send" FontSize="22" />
                        </StackPanel>
                    </Button.Content>
                </Button>

                <!--  Delete Button  -->
                <Button Grid.Row="3" Grid.Column="0" Width="100" Height="75"
                    Margin="10,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Bottom"
                    CornerRadius="10" Click="OnDelete"
                    Visibility="{x:Bind ShowDeleteButton, Mode=OneWay}"
                    Foreground="{x:Bind TheHuman.ForegroundBrush, Mode=OneWay}">
                    <Button.Content>
                        <StackPanel>
                            <TextBlock HorizontalAlignment="Center" Text="&#xE0D9;" FontFamily="Segoe UI Symbol" FontSize="22" />
                            <TextBlock Text="Remove" FontSize="22" />
                        </StackPanel>
                    </Button.Content>
                </Button>


            </Grid>


        </StackPanel>
        <!--  the List of offers  -->
        <StackPanel Width="387" Height="370" Margin="-15,0,0,0"
            Visibility="{x:Bind ListLayout, Mode=OneWay}"
            Background="{x:Bind TradeOffer.Owner.BackgroundBrush, Mode=OneWay, TargetNullValue=Red, FallbackValue=Red}"
            BorderBrush="Gold" BorderThickness="1" CornerRadius="10">


            <Grid Margin="10" HorizontalAlignment="Stretch" VerticalAlignment="Center"
                Background="Transparent"
                BorderBrush="{x:Bind TradeOffer.Owner.ForegroundBrush, Mode=OneWay}"
                BorderThickness="1" CornerRadius="10">
                <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                    <Ellipse Width="30" Height="30" Margin="10,0,0,0" VerticalAlignment="Center"
                        Fill="{x:Bind TradeOffer.Owner.ImageBrush, Mode=OneWay}"
                        Stroke="Black" />
                    <ToggleSwitch Margin="10,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"
                        Style="{StaticResource CatanToggleSwitch}"
                        Foreground="{x:Bind TradeOffer.Owner.ForegroundBrush, Mode=OneWay, TargetNullValue=Red, FallbackValue=Red}"
                        Background="Red"
                        IsOn="{x:Bind TradeOffer.OwnerApproved, Mode=TwoWay}">
                        <ToggleSwitch.OnContent>
                            <TextBlock Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"
                                FontFamily="Segoe UI Symbol" FontSize="22"
                                Foreground="{x:Bind TradeOffer.Owner.ForegroundBrush, Mode=OneWay}"
                                Text="&#xE19F;" />
                        </ToggleSwitch.OnContent>
                        <ToggleSwitch.OffContent>
                            <TextBlock Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"
                                FontFamily="Segoe UI Symbol" FontSize="22"
                                Foreground="{x:Bind TradeOffer.Owner.ForegroundBrush, Mode=OneWay}"
                                Text="&#xE19E;" />
                        </ToggleSwitch.OffContent>
                    </ToggleSwitch>
                </StackPanel>


                <StackPanel Margin="0,0,10,0" HorizontalAlignment="Right" Orientation="Horizontal">
                    <Ellipse Width="30" Height="30" Margin="0,0,10,0" HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Fill="{x:Bind PartnerImageBrush(TradeOffer.TradePartners), Mode=OneWay, TargetNullValue=Blue}"
                        Stroke="Black" />

                    <ToggleSwitch Width="85" Margin="0,0,0,0" HorizontalAlignment="Right"
                        VerticalAlignment="Center" Background="Blue"
                        IsHitTestVisible="{x:Bind PartnerHitTest(TradeOffer.TradePartners), Mode=OneWay}"
                        Foreground="{x:Bind TradeOffer.Owner.ForegroundBrush, Mode=OneWay, TargetNullValue=Red, FallbackValue=Red}"
                        Style="{StaticResource CatanToggleSwitch}"
                        IsOn="{x:Bind TradeOffer.PartnerApproved, Mode=TwoWay}">
                        <ToggleSwitch.OnContent>
                            <TextBlock Margin="0,0,0,0" HorizontalAlignment="Right" VerticalAlignment="Center"
                                FontFamily="Segoe UI Symbol" FontSize="22"
                                Foreground="{x:Bind TradeOffer.Owner.ForegroundBrush, Mode=OneWay}"
                                Text="&#xE19F;" />
                        </ToggleSwitch.OnContent>
                        <ToggleSwitch.OffContent>
                            <TextBlock Margin="0,0,0,0" HorizontalAlignment="Right" VerticalAlignment="Center"
                                FontFamily="Segoe UI Symbol" FontSize="22"
                                Foreground="{x:Bind TradeOffer.Owner.ForegroundBrush, Mode=OneWay}"
                                Text="&#xE19E;" />
                        </ToggleSwitch.OffContent>
                    </ToggleSwitch>


                </StackPanel>
            </Grid>



            <TextBlock Margin="5,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center"
                Foreground="{x:Bind TradeOffer.Owner.ForegroundBrush, Mode=OneWay, TargetNullValue=Red, FallbackValue=Red}"
                FontSize="32" Text="Offer" />




            <!--  My Offer  -->
            <local:TradeResourcesCtrl Grid.Row="1" Margin="5,0,0,0"
                ShowButtons="{x:Bind ShowResourceButtons, Mode=OneWay}"
                TradeResources="{x:Bind TradeOffer.Offer, Mode=OneWay}"
                OnResourceChanged="OnOfferChanged" />

            <!--  Divider  -->
            <Rectangle Height="2" Margin="10,10,10,0" HorizontalAlignment="Stretch" Fill="{x:Bind TradeOffer.Owner.ForegroundBrush, Mode=OneWay}" />

            <TextBlock Grid.Column="2" Margin="5,0,0,0" HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Foreground="{x:Bind TradeOffer.Owner.ForegroundBrush, Mode=OneWay, TargetNullValue=Red, FallbackValue=Red}"
                FontSize="32" Text="Desire" />

            <Grid Margin="5,0,0,0">
                <!--  My Desire  -->
                <local:TradeResourcesCtrl HorizontalAlignment="Left" TradeResources="{x:Bind TradeOffer.Desire, Mode=OneWay}" ShowButtons="{x:Bind ShowResourceButtons, Mode=OneWay}" OnResourceChanged="OnDesireChanged" />

                <!--  Delete Button  -->
                <Button Grid.Row="3" Grid.Column="0" Margin="2,0,5,0" HorizontalAlignment="Right"
                    VerticalAlignment="Center" CornerRadius="10" Click="OnDelete"
                    Visibility="{x:Bind ShowDeleteButton, Mode=OneWay}"
                    Foreground="{x:Bind TradeOffer.Owner.ForegroundBrush, Mode=OneWay}">
                    <Button.Content>
                        <StackPanel>
                            <TextBlock HorizontalAlignment="Center" Text="&#xE0D9;" FontFamily="Segoe UI Symbol" FontSize="18" />
                            <TextBlock Text="Delete" FontSize="18" />
                        </StackPanel>
                    </Button.Content>
                </Button>
            </Grid>







        </StackPanel>


    </Grid>
</UserControl>
