        <StackPanel Orientation="Horizontal" Background="Transparent">
            <!--  the First stack panel on the left with theoffer  -->
            <StackPanel Margin="5"
                Background="{x:Bind TheHuman.BackgroundBrush, Mode=OneWay, TargetNullValue=Red, FallbackValue=Black}"
                BorderBrush="{x:Bind TheHuman.ForegroundBrush, Mode=OneWay}"
                BorderThickness="1" CornerRadius="10">
                <TextBlock Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center"
                    Foreground="{x:Bind TheHuman.ForegroundBrush, Mode=OneWay, TargetNullValue=Red, FallbackValue=Red}"
                    FontSize="32" Text="Offer" />

                <local:TradeResourcesCtrl Grid.Row="1" Width="385" Margin="5,0,0,0" HorizontalAlignment="Left"
                    VerticalAlignment="Top" ShowButtons="True" Orientation="Horizontal"
                    CardWidth="120"
                    TradeResources="{x:Bind TheHuman.GameData.Trades.TradeRequest.Owner.Resources, Mode=OneWay}"
                    AvailableResources="{x:Bind TheHuman.GameData.Resources.Current, Mode=OneWay}"
                    ShowAvailableResources="True" OnResourceChanged="OnOfferChanged" />
            </StackPanel>
            <!--  The vertical list of trading partners  -->
            <GridView Name="GridView_TradingPartners" Width="140" Height="400" Margin="5"
                HorizontalAlignment="Center" VerticalAlignment="Top" Background="Transparent"
                ItemsSource="{x:Bind GetTradePartners(TheHuman, CurrentPlayer, PlayingPlayers), Mode=OneWay}"
                SelectionChanged="OnTradingPartnerSelectionChanged"
                BorderBrush="{x:Bind TheHuman.ForegroundBrush, Mode=OneWay}"
                BorderThickness="2" CornerRadius="10" SelectionMode="Multiple">
                <GridView.Header>
                    <StackPanel Margin="-25,0,0,0">
                        <TextBlock Margin="0,-15,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"
                            Text="⇿"
                            Foreground="{x:Bind TheHuman.ForegroundBrush, Mode=OneWay}"
                            FontSize="42" />
                        <TextBlock Margin="0,-15,0,0" Padding="0" HorizontalAlignment="Center" Text="Trade With"
                            Foreground="{x:Bind TheHuman.ForegroundBrush, Mode=OneWay}" />
                    </StackPanel>
                </GridView.Header>
                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="local:PlayerModel">
                        <Viewbox Width="114" Margin="2">
                            <local:PlayerPickerItemCtrl Margin="0,5,0,0" HorizontalAlignment="Center"
                                Player="{x:Bind}"
                                CanDrag="False" IsHitTestVisible="false" />
                        </Viewbox>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>

            <!--  the last stack panel on the right with the desire  -->
            <StackPanel Margin="5"
                Background="{x:Bind TheHuman.BackgroundBrush, Mode=OneWay, TargetNullValue=Red, FallbackValue=Black}"
                BorderBrush="{x:Bind TheHuman.ForegroundBrush, Mode=OneWay}"
                BorderThickness="1" CornerRadius="10">
                <TextBlock Grid.Column="2" Margin="5,0,0,0" HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Foreground="{x:Bind TheHuman.ForegroundBrush, Mode=OneWay, TargetNullValue=Red, FallbackValue=Red}"
                    FontSize="32" Text="Desire" />
                <!--  My Desire  -->
                <local:TradeResourcesCtrl Width="385" HorizontalAlignment="Left" VerticalAlignment="Top"
                    Orientation="Horizontal" CardWidth="120"
                    TradeResources="{x:Bind TheHuman.GameData.Trades.TradeRequest.Partner.Resources, Mode=OneWay}"
                    ShowButtons="True" OnResourceChanged="OnDesireChanged" />
            </StackPanel>
        </StackPanel>
        <!--  The Bottom  -->
        <Grid Background="{x:Bind TheHuman.BackgroundBrush, Mode=OneWay}">
            <!--  Approvals  -->
            <StackPanel Width="150" Margin="0,10,0,10" HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderBrush="{x:Bind TheHuman.ForegroundBrush, Mode=OneWay}"
                BorderThickness="1" CornerRadius="10">
                <TextBlock Margin="0,0,0,0" HorizontalAlignment="Center" Text="Approve" Foreground="{x:Bind TheHuman.ForegroundBrush, Mode=OneWay}" />
                <StackPanel Orientation="Horizontal">
                    <Ellipse Width="30" Height="30" Margin="10,0,0,0" HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Fill="{x:Bind TheHuman.ImageBrush, Mode=OneWay}"
                        Stroke="Black" />
                    <ToggleSwitch Width="50" Margin="10,0,0,0" VerticalAlignment="Top"
                        Style="{StaticResource CatanToggleSwitch}"
                        Foreground="{x:Bind TheHuman.ForegroundBrush, Mode=OneWay, TargetNullValue=Red, FallbackValue=Red}"
                        Background="Red"
                        IsOn="{x:Bind TheHuman.GameData.Trades.TradeRequest.Owner.Approved, Mode=OneWay, FallbackValue=False}">
                        <ToggleSwitch.OnContent>
                            <Border BorderBrush="{x:Bind TheHuman.ForegroundBrush, Mode=OneWay, TargetNullValue=White}" BorderThickness="1">
                                <TextBlock Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"
                                    FontFamily="Segoe UI Symbol" FontSize="22"
                                    Foreground="{x:Bind TheHuman.ForegroundBrush, Mode=OneWay}"
                                    Text="&#xE19F;" />
                            </Border>
                        </ToggleSwitch.OnContent>
                        <ToggleSwitch.OffContent>
                            <TextBlock Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"
                                FontFamily="Segoe UI Symbol" FontSize="22"
                                Foreground="{x:Bind TheHuman.ForegroundBrush, Mode=OneWay}"
                                Text="&#xE19E;" />
                        </ToggleSwitch.OffContent>
                    </ToggleSwitch>
                </StackPanel>
            </StackPanel>

            <!--  Buttons  -->

            <Grid Height="80" Margin="0,0,0,10" HorizontalAlignment="Stretch">
                <StackPanel Orientation="Horizontal">
                    <!--  Reset Button  -->
                    <Button Grid.Row="3" Grid.Column="0" Width="100" Height="75"
                        Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                        CornerRadius="10" Click="OnReset"
                        Visibility="{x:Bind ShowResetButton, Mode=OneWay}"
                        Foreground="{x:Bind TheHuman.ForegroundBrush, Mode=OneWay, FallbackValue=White, TargetNullValue=White}">
                        <Button.Content>
                            <StackPanel>
                                <TextBlock Margin="0,-5,0,0" HorizontalAlignment="Center" Text="&#xE0D9;"
                                    FontFamily="Segoe UI Symbol" FontSize="32" />
                                <TextBlock Text="Reset" FontSize="22" />
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <!--  All button  -->

                    <Button Grid.Row="3" Grid.Column="0" Width="100" Height="75"
                        Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                        CornerRadius="10" Click="OnClickAll"
                        Foreground="{x:Bind TheHuman.ForegroundBrush, Mode=OneWay}">
                        <Button.Content>

                            <StackPanel>
                                <TextBlock Margin="0,-5,0,0" HorizontalAlignment="Center" Text="&#xE128;"
                                    FontFamily="Segoe UI Symbol" FontSize="33" />
                                <TextBlock Margin="0,-2,0,0" HorizontalAlignment="Center" Text="All" FontSize="22" />
                            </StackPanel>

                        </Button.Content>
                    </Button>


                    <Button Grid.Row="3" Grid.Column="0" Width="100" Height="75"
                        Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                        CornerRadius="10" Click="OnClickNone"
                        Foreground="{x:Bind TheHuman.ForegroundBrush, Mode=OneWay}">
                        <Button.Content>

                            <StackPanel>
                                <TextBlock Margin="0,0,0,0" HorizontalAlignment="Center" Text="&#xE1E0;"
                                    FontFamily="Segoe UI Symbol" FontSize="30" />
                                <TextBlock Margin="0,-2,0,0" HorizontalAlignment="Center" Text="None" FontSize="22" />
                            </StackPanel>

                        </Button.Content>
                    </Button>

                </StackPanel>
                <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center" Orientation="Horizontal">
                    <!--  Filter  -->
                    <StackPanel Orientation="Horizontal"  Margin="0,0,30,0" Padding="5" HorizontalAlignment="Left" 
                            VerticalAlignment="Center" CornerRadius="10"
                            BorderBrush="{x:Bind TheHuman.ForegroundBrush, Mode=OneWay}"
                            BorderThickness="1">
                        <TextBlock Text="&#xE16E;" FontFamily="SEgoe MDL2 Assets" Foreground="{x:Bind TheHuman.ForegroundBrush, Mode=OneWay}" FontSize="32" 
                                   Margin="10,10,20,10"
                                   VerticalAlignment="Center" HorizontalAlignment="Left" />
                        <ToggleSwitch Toggled="OnFilterToggled">
                            <ToggleSwitch.OffContent>
                                <TextBlock Text="All" FontSize="22" />
                            </ToggleSwitch.OffContent>
                            <ToggleSwitch.OnContent>
                                <TextBlock Text="Mine" FontSize="22" />
                            </ToggleSwitch.OnContent>
                        </ToggleSwitch>
                    </StackPanel>
                    <!--  Send Button  -->
                    <Button Width="100" Height="75" Margin="0,0,10,0" HorizontalAlignment="Right"
                        VerticalAlignment="Bottom" Click="OnSendClicked" CornerRadius="10"
                        Visibility="{x:Bind ShowSendButton, Mode=OneWay}"
                        Foreground="{x:Bind TheHuman.ForegroundBrush, Mode=OneWay}"
                        IsEnabled="{x:Bind EnableSend, Mode=OneWay}">
                        <Button.Content>
                            <StackPanel>
                                <TextBlock HorizontalAlignment="Center" Text="&#xE122;" FontFamily="Segoe MDL2 Assets" FontSize="22" />
                                <TextBlock Text="Send" FontSize="22" />
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </StackPanel>
</UserControl>
