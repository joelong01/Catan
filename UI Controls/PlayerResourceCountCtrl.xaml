<UserControl
    x:Class="Catan10.PlayerResourceCountCtrl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Catan10"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="SlateBlue"
    d:DesignHeight="600"
    d:DesignWidth="440">

    <Control.Resources>
        <DataTemplate  x:Key="PlayerResourceCountItem" x:DataType="local:PlayerData">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="180"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="1" Grid.Row="1" Grid.RowSpan="1" Grid.ColumnSpan="2" Margin="-2" BorderThickness="2" CornerRadius="12" >
                    <Border.BorderBrush>
                        <ImageBrush Stretch="Fill" ImageSource="ms-appx:///Assets/maple.jpg"/>
                    </Border.BorderBrush>
                </Border>

                <Grid Grid.Row="1"  Grid.Column="1" Grid.RowSpan="2" 
                      Background="{x:Bind Path=Background, Mode=OneWay, FallbackValue=Green, Converter={StaticResource ResourceKey=ColorToBrushConverter}}" 
                      CornerRadius="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="100"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="30"/>
                        
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <!--Top Row-->
                    <Viewbox Grid.Column="2">
                        <TextBlock  Grid.Column="0" Text="⛙" FontFamily="Segoe UI Symbol" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"  
                                    Foreground="{x:Bind Path=Foreground, Mode=OneWay, FallbackValue=White, Converter={StaticResource ResourceKey=ColorToBrushConverter}}" />
                    </Viewbox>
                    <Viewbox Grid.Column="3">
                        <TextBlock  Name="_txtRoads"         Text="{x:Bind GameData.RoadsLeft, Mode=OneWay, FallbackValue=7}"  
                                    Foreground="{x:Bind Path=Foreground, Mode=OneWay, FallbackValue=White, Converter={StaticResource ResourceKey=ColorToBrushConverter}}"
                                    Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="Century Schoolbook" FontSize="18" />
                    </Viewbox>
                    <Viewbox Grid.Column="5">
                        <local:SettlementUi Width="30" Height="30" CastleColor="White" CircleFillColor="{x:Bind Path=Foreground, Mode=OneWay, FallbackValue=White}"/>
                    </Viewbox>
                    <Viewbox  Grid.Column="6">
                        <TextBlock Name="_txtSettlements"   Text="{x:Bind GameData.SettlementsLeft, Mode=OneWay, FallbackValue=7}"  
                           HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="Century Schoolbook" FontSize="18" 
                           Foreground="{x:Bind Path=Foreground, Mode=OneWay, FallbackValue=White, Converter={StaticResource ResourceKey=ColorToBrushConverter}}"/>
                    </Viewbox>
                    <Viewbox Grid.Column="8">
                        <local:CityCtrl Width="30" Height="30" CastleColor="White" CircleFillColor="{x:Bind Path=Foreground, FallbackValue=White, Mode=OneWay}"/>
                    </Viewbox>

                    <Viewbox Grid.Column="9">
                        <TextBlock Name="_txtCities" Text="{x:Bind GameData.CitiesLeft, Mode=OneWay, FallbackValue=7}"   
                           HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="Century Schoolbook" FontSize="18" 
                           Foreground="{x:Bind Path=Foreground, Mode=OneWay, FallbackValue=White, Converter={StaticResource ResourceKey=ColorToBrushConverter}}"/>
                    </Viewbox>
                    <Viewbox Grid.Column="11">
                        <local:SailboatCtrl  CircleColor="{x:Bind Path=Foreground, Mode=OneWay, FallbackValue=White}"/>
                    </Viewbox>

                    <Viewbox   Grid.Column="12">
                        <TextBlock Name="_txtShips"  Text="{x:Bind GameData.ShipsLeft, Mode=OneWay, FallbackValue=15}"    
                           Foreground="{x:Bind Path=Foreground, Mode=OneWay, FallbackValue=White, Converter={StaticResource ResourceKey=ColorToBrushConverter}}"
                           Grid.Column="7" HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="Century Schoolbook" FontSize="18" />
                    </Viewbox>
                    <!--<Bottom Row-->
                    <Viewbox Grid.Column="2" Grid.Row="3">
                        <TextBlock  Text="&#xF272;" FontFamily="Segoe MDL2 Assets" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"  
                                    Foreground="{x:Bind Path=Foreground, Mode=OneWay, FallbackValue=White, Converter={StaticResource ResourceKey=ColorToBrushConverter}}" />
                    </Viewbox>
                    <Viewbox Grid.Column="3" Grid.Row="3">
                        <TextBlock  Text="{x:Bind GameData.TimesTargeted, Mode=OneWay, FallbackValue=0}"  
                                    Foreground="{x:Bind Path=Foreground, Mode=OneWay, FallbackValue=White, Converter={StaticResource ResourceKey=ColorToBrushConverter}}"
                                    HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="Century Schoolbook" FontSize="18" />
                    </Viewbox>
                    <Viewbox Grid.Column="5" Grid.Row="3">

                        <local:BaronCtrl />


                    </Viewbox>
                    <Viewbox Grid.Column="6" Grid.Row="3">
                        <TextBlock   Text="{x:Bind GameData.CardsLostToBaron, Mode=OneWay, FallbackValue=7}"  
                                             HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="Century Schoolbook" FontSize="18" 
                                              Foreground="{x:Bind Path=Foreground, Mode=OneWay, FallbackValue=White, Converter={StaticResource ResourceKey=ColorToBrushConverter}}"/>
                    </Viewbox>
                    <Viewbox Grid.Column="8" Grid.Row="3">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="17.5" />
                                <ColumnDefinition Width="12.5" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30" />
                            </Grid.RowDefinitions>
                            <Viewbox HorizontalAlignment="Left" VerticalAlignment="Top" Stretch="Fill">
                                <local:ResourceCardCtrl Orientation="FaceDown"/>
                            </Viewbox>
                            <Viewbox Grid.Column="2" VerticalAlignment="Bottom">
                                <TextBlock Grid.Column="1" Text="&#xF272;" FontFamily="Segoe MDL2 Assets" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"  
                                    Foreground="{x:Bind Path=Foreground, Mode=OneWay, FallbackValue=White, Converter={StaticResource ResourceKey=ColorToBrushConverter}}" />
                            </Viewbox>
                        </Grid>
                    </Viewbox>
                    <Viewbox Grid.Column="9" Grid.Row="3">
                        <TextBlock   Text="{x:Bind GameData.CardsLostToBaron, Mode=OneWay, FallbackValue=7}"  
                                             HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="Century Schoolbook" FontSize="18" 
                                              Foreground="{x:Bind Path=Foreground, Mode=OneWay, FallbackValue=White, Converter={StaticResource ResourceKey=ColorToBrushConverter}}"/>
                    </Viewbox>

                </Grid>
                <!--  Middle Row -->
                <StackPanel Name="_stackpanel" Orientation="Horizontal" Grid.RowSpan="1" Grid.Row="2" Grid.Column="1" >
                    <local:ResourceCardCtrl ResourceType="Wood"     Count="{x:Bind GameData.PlayerResourceData.Wood, Mode=OneWay,FallbackValue=0}" x:Name="ResourceCard_Wood"       Orientation="{x:Bind GameData.PlayerResourceData.Wood, FallbackValue=FaceDown, Mode=OneWay, Converter={StaticResource CountToOrientationConverter}}" />
                    <local:ResourceCardCtrl ResourceType="Brick"    Count="{x:Bind GameData.PlayerResourceData.Brick, Mode=OneWay,FallbackValue=0}" x:Name="ResourceCard_Brick"     Orientation="{x:Bind GameData.PlayerResourceData.Brick, FallbackValue=FaceDown, Mode=OneWay, Converter={StaticResource CountToOrientationConverter}}"/>
                    <local:ResourceCardCtrl ResourceType="Sheep"    Count="{x:Bind GameData.PlayerResourceData.Sheep, Mode=OneWay,FallbackValue=0}" x:Name="ResourceCard_Sheep"     Orientation="{x:Bind GameData.PlayerResourceData.Sheep, FallbackValue=FaceDown,Mode=OneWay, Converter={StaticResource CountToOrientationConverter}}"/>
                    <local:ResourceCardCtrl ResourceType="Wheat"    Count="{x:Bind GameData.PlayerResourceData.Wheat, Mode=OneWay,FallbackValue=0}" x:Name="ResourceCard_Wheat"     Orientation="{x:Bind GameData.PlayerResourceData.Wheat, FallbackValue=FaceDown, Mode=OneWay,Converter={StaticResource CountToOrientationConverter}}"/>
                    <local:ResourceCardCtrl ResourceType="Ore"      Count="{x:Bind GameData.PlayerResourceData.Ore, Mode=OneWay,FallbackValue=0}" x:Name="ResourceCard_Ore"         Orientation="{x:Bind GameData.PlayerResourceData.Ore, FallbackValue=FaceDown, Mode=OneWay, Converter={StaticResource CountToOrientationConverter}}"/>
                    <local:ResourceCardCtrl ResourceType="GoldMine" Count="{x:Bind GameData.PlayerResourceData.Gold, Mode=OneWay,FallbackValue=0}" x:Name="ResourceCard_GoldMine"   Orientation="{x:Bind GameData.PlayerResourceData.Gold, FallbackValue=FaceDown, Mode=OneWay,Converter={StaticResource CountToOrientationConverter}}"/>
                </StackPanel>

                <Ellipse Width="60" Height="60" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.RowSpan="2" Ellipse.Fill="{x:Bind ImageBrush, Mode=OneWay}"/>



            </Grid>

        </DataTemplate>
    </Control.Resources>

    <Grid Name="Grid_PlayerResourceCount" >
        <Grid.RowDefinitions>
            <RowDefinition Height="110"/>
            <RowDefinition Height="2"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Name="StackPanel_TotalResourceCount" Orientation="Horizontal" Grid.RowSpan="1" Grid.Row="0" Grid.Column="0" Margin="8,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" 
                        BorderBrush="{StaticResource bmMaple}" BorderThickness="1" CornerRadius="10">
            <local:ResourceCardCtrl ResourceType="Wood"     Count="{x:Bind GameResourceData.Wood, Mode=OneWay,FallbackValue=0}"  x:Name="ResourceCardControl_Wood"     />
            <local:ResourceCardCtrl ResourceType="Brick"    Count="{x:Bind GameResourceData.Brick, Mode=OneWay,FallbackValue=0}" x:Name="ResourceCardControl_Brick"    />
            <local:ResourceCardCtrl ResourceType="Sheep"    Count="{x:Bind GameResourceData.Sheep, Mode=OneWay,FallbackValue=0}" x:Name="ResourceCardControl_Sheep"    />
            <local:ResourceCardCtrl ResourceType="Wheat"    Count="{x:Bind GameResourceData.Wheat, Mode=OneWay,FallbackValue=0}" x:Name="ResourceCardControl_Wheat"    />
            <local:ResourceCardCtrl ResourceType="Ore"      Count="{x:Bind GameResourceData.Ore, Mode=OneWay,FallbackValue=0}"   x:Name="ResourceCardControl_Ore"      />
            <local:ResourceCardCtrl ResourceType="GoldMine" Count="{x:Bind GameResourceData.Gold, Mode=OneWay,FallbackValue=0}"  x:Name="ResourceCardControl_GoldMine" />
        </StackPanel>
        <Rectangle Fill="{StaticResource bmMaple}" Grid.Row="1" Margin="5,0,5,0" />
        <ListBox Name="ListBox_PlayerResourceCountList " Grid.Row="2"  ItemsSource="{x:Bind Path=PlayingPlayers, Mode=OneWay}" ItemTemplate="{StaticResource PlayerResourceCountItem}"
                     Background="Transparent"
                     UseSystemFocusVisuals="False" ScrollViewer.VerticalScrollBarVisibility="Disabled" Margin="0,0,0,0" >
            <ListBoxItem Padding="0" Margin="0,20,0,0">

            </ListBoxItem>
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Margin" Value="8,10,0,0"/>
                    <Setter Property="Padding" Value="0" />
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
    </Grid>
</UserControl>
