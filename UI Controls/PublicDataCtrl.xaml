<UserControl x:Class="Catan10.PublicDataCtrl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Catan10" xmlns:proxy="using:Catan.Proxy"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="userControl" d:DesignHeight="265" d:DesignWidth="605" mc:Ignorable="d">
    <Control.Resources>
        <!--<Style TargetType="Grid" x:Key="FlippableGridStyle">
            <Style.
        </Style>-->
        <Storyboard x:Name="ShowStats">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Grid_Roll" Storyboard.TargetProperty="(UIElement.Projection).(PlaneProjection.RotationY)">
                <EasingDoubleKeyFrame KeyTime="0" Value="0" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="90" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Grid_Stats" Storyboard.TargetProperty="(UIElement.Projection).(PlaneProjection.RotationY)">
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="-90" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="0" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Name="ShowLatestRoll">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Grid_Roll" Storyboard.TargetProperty="(UIElement.Projection).(PlaneProjection.RotationY)">
                <SplineDoubleKeyFrame KeyTime="0:0:0.2" Value="90" />
                <SplineDoubleKeyFrame KeyTime="0:0:0.4" Value="0" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Grid_Stats" Storyboard.TargetProperty="(UIElement.Projection).(PlaneProjection.RotationY)">
                <SplineDoubleKeyFrame KeyTime="0:0:0.2" Value="-90" />
                <SplineDoubleKeyFrame KeyTime="0:0:0.4" Value="-90" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Style x:Key="RollCtrl_GridStyle" TargetType="Grid">
            <Setter Property="Margin" Value="0" />
            <Setter Property="BorderBrush" Value="{StaticResource bmCherry}" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="CornerRadius" Value="10" />
        </Style>
    </Control.Resources>
    <!--<Border.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" />
                <GradientStop Color="CadetBlue" Offset="1" />
            </LinearGradientBrush>
        </Border.Background>
        <Grid Width="605" >-->
    <Border Margin="0,0,0,0" CornerRadius="30,15,15,10" BorderThickness="4" BorderBrush="{StaticResource bmMaple}">
        <Grid Width="600" Height="250" Background="{x:Bind Player.BackgroundBrush, Mode=OneWay}">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="100" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="350" />
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="0" />
            </Grid.ColumnDefinitions>
            <!--  The button to flip between stats and rolls  -->
            <Button Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" Margin="42,0,0,0"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"
                BorderBrush="Transparent" Visibility="Visible" Background="Transparent"
                Click="OnFlipRollGrid">
                <Button.Content>
                    <TextBlock Text="⎌" RenderTransformOrigin=".5 .5"
                        Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White, TargetNullValue=White}"
                        LineStackingStrategy="BaselineToBaseline" TextLineBounds="Tight" LineHeight="0">
                        <TextBlock.RenderTransform>
                            <CompositeTransform ScaleX="1.25" ScaleY="1.25" />
                        </TextBlock.RenderTransform>
                    </TextBlock>
                </Button.Content>
            </Button>
            <Ellipse Margin="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                Stroke="White"
                Tag="{x:Bind Player, Mode=OneTime}"
                IsTapEnabled="True" IsRightTapEnabled="True"
                Fill="{x:Bind Player.ImageBrush, Mode=OneWay, FallbackValue=Blue, TargetNullValue=Blue}"
                PointerPressed="Picture_PointerPressed" />
            <!--  Top Row with resource tracking  -->
            <StackPanel Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" Height="45"
                Margin="3,0,5,0" VerticalAlignment="Stretch" Orientation="Horizontal"
                BorderBrush="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White, TargetNullValue=White}"
                BorderThickness="1" CornerRadius="6">
                <Viewbox>
                    <Button Margin="0,-5,0,-5">
                        <Rectangle Width="70" Height="100"
                            Fill="{StaticResource ResourceType.Back}"
                            RadiusX="10" RadiusY="10" Stroke="White" StrokeThickness="1" />
                        <Button.Flyout>
                            <MenuFlyout>
                                <MenuFlyoutItem Text="Buy Dev Card" />
                                <MenuFlyoutSeparator />
                                <MenuFlyoutItem Text="Buy Settlement" />
                                <MenuFlyoutItem Text="Buy City" />
                                <MenuFlyoutItem Text="Buy Road" />
                                <MenuFlyoutSeparator />
                                <MenuFlyoutItem Text="Resource Trade..." />
                            </MenuFlyout>
                        </Button.Flyout>
                    </Button>
                </Viewbox>
                <TextBlock Margin="2,0,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Center"
                    Text="{x:Bind Player.GameData.Resources.TotalResources.Count, Mode=OneWay, FallbackValue=0}"
                    FontSize="38"
                    Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White, TargetNullValue=White}"
                    FontFamily="Century Schoolbook" />
                <Viewbox>
                    <Button Margin="30,-5,0,-5">
                        <Rectangle Width="70" Height="100"
                            Fill="{StaticResource DevCardType.Back}"
                            RadiusX="10" RadiusY="10" Stroke="White" StrokeThickness="1" />
                    </Button>
                </Viewbox>
                <TextBlock Margin="2,0,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Center"
                    Text="{x:Bind Player.GameData.Resources.AvailableDevCards.Count, Mode=OneWay, FallbackValue=0}"
                    FontSize="38"
                    Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}"
                    FontFamily="Century Schoolbook" />
                <Viewbox Margin="5,0,0,0">
                    <ListBox Margin="30,0,10,-5" Background="Transparent">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Margin" Value="0,0,0,10" />
                                <Setter Property="Padding" Value="0" />
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.Items>
                            <ListBoxItem>
                                <local:ResourceCardSlimCtrl Image="{StaticResource DevCardType.Monopoly}" Count="{x:Bind Player.GameData.Resources.PlayedMonopoly, Mode=OneWay, FallbackValue=0}" />
                            </ListBoxItem>
                            <ListBoxItem>
                                <local:ResourceCardSlimCtrl Image="{StaticResource DevCardType.RoadBuilding}" Count="{x:Bind Player.GameData.Resources.PlayedRoadBuilding, Mode=OneWay, FallbackValue=0}" />
                            </ListBoxItem>
                            <ListBoxItem>
                                <local:ResourceCardSlimCtrl Image="{StaticResource DevCardType.YearOfPlenty}" Count="{x:Bind Player.GameData.Resources.PlayedYearOfPlenty, Mode=OneWay, FallbackValue=0}" />
                            </ListBoxItem>
                        </ListBox.Items>
                    </ListBox>
                </Viewbox>
                <!--  Roads  -->
                <local:RoadCtrl Grid.Column="0" Width="50" Height="30" Margin="0,0,2,0"
                    Owner="{x:Bind Player, Mode=OneWay}"
                    Location="Top" RenderTransformOrigin=".5 .5">
                    <local:RoadCtrl.RenderTransform>
                        <CompositeTransform Rotation="90" TranslateX="0" TranslateY="6" />
                    </local:RoadCtrl.RenderTransform>
                </local:RoadCtrl>
                <TextBlock Grid.Column="1" Margin="-20,0,0,0" HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Text="{x:Bind Player.GameData.RoadsPlayed, Mode=OneWay, FallbackValue=7}"
                    Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}"
                    FontFamily="Century Schoolbook" FontSize="28" />
                <TextBlock Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Text="/"
                    Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}"
                    FontFamily="Century Schoolbook" FontSize="28" />
                <TextBlock Name="_txtRoads" Grid.Column="1" HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Text="{x:Bind Player.GameData.MaxRoads, Mode=OneWay, FallbackValue=7}"
                    Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}"
                    FontFamily="Century Schoolbook" FontSize="28" />
                <!--  Settlements  -->
                <Viewbox Margin="0,0,0,0">
                    <local:SettlementCtrl Width="30" Height="30" Margin="5,0,0,0" Owner="{x:Bind Player, Mode=OneWay}" />
                </Viewbox>
                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center"
                    Text="{x:Bind Player.GameData.SettlementsPlayed, Mode=OneWay, FallbackValue=7}"
                    FontFamily="Century Schoolbook" FontSize="28"
                    Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}" />
                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Text="/"
                    FontFamily="Century Schoolbook" FontSize="28"
                    Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}" />
                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center"
                    Text="{x:Bind Player.GameData.MaxSettlements, Mode=OneWay, FallbackValue=7}"
                    FontFamily="Century Schoolbook" FontSize="28"
                    Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}" />
                <!--  Cities  -->
                <Viewbox Margin="0,0,0,0">
                    <local:CityCtrl Margin="0,0,0,0" Owner="{x:Bind Player, Mode=OneWay}" />
                </Viewbox>
                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center"
                    Text="{x:Bind Player.GameData.CitiesPlayed, Mode=OneWay, FallbackValue=7}"
                    FontFamily="Century Schoolbook" FontSize="28"
                    Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}" />
                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Text="/"
                    FontFamily="Century Schoolbook" FontSize="28"
                    Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}" />
                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center"
                    Text="{x:Bind Player.GameData.MaxCities, Mode=OneWay, FallbackValue=7}"
                    FontFamily="Century Schoolbook" FontSize="28"
                    Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}" />
                <!--  Boats  -->
                <local:SailboatCtrl Margin="50,0,0,0" CircleColor="{x:Bind Player.ForegroundColor, Mode=OneWay, FallbackValue=Green}" Visibility="{x:Bind Player.GameData.ShipsVisible, Mode=OneTime}" />
                <TextBlock Grid.Column="7" HorizontalAlignment="Left" VerticalAlignment="Center"
                    Text="{x:Bind Player.GameData.ShipsPlayed, Mode=OneWay, FallbackValue=15}"
                    Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}"
                    FontFamily="Century Schoolbook" FontSize="18"
                    Visibility="{x:Bind Player.GameData.ShipsVisible, Mode=OneTime}" />
                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Text="/"
                    FontFamily="Century Schoolbook" FontSize="18"
                    Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}"
                    Visibility="{x:Bind Player.GameData.ShipsVisible, Mode=OneTime}" />
                <TextBlock Grid.Column="7" HorizontalAlignment="Left" VerticalAlignment="Center"
                    Text="{x:Bind Player.GameData.MaxShips, Mode=OneWay, FallbackValue=15}"
                    Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}"
                    Visibility="{x:Bind Player.GameData.ShipsVisible, Mode=OneTime}"
                    FontFamily="Century Schoolbook" FontSize="18" />
            </StackPanel>
            <!--  Second Row  -->
            <Viewbox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Left">
                <StackPanel Orientation="Horizontal">
                    <Rectangle Width="70" Height="100" Margin="10,0,0,0"
                        Fill="{StaticResource ResourceType.GoldMine}"
                        RadiusX="10" RadiusY="10" Stroke="White" StrokeThickness="1"
                        ToolTipService.ToolTip="Score" />
                    <!--  Score  -->
                    <TextBlock Margin="10,0,0,0" FontSize="72"
                        Text="{x:Bind Player.GameData.Score, Mode=OneWay, FallbackValue=12}"
                        Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}"
                        ToolTipService.ToolTip="Score" />
                    <!--  Resources Acquired  -->
                    <Rectangle Width="70" Height="100" Margin="30,0,0,0"
                        Fill="{StaticResource ResourceType.Back}"
                        RadiusX="10" RadiusY="10" Stroke="White" StrokeThickness="1" />
                    <TextBlock Margin="-68,-8,0,0" Text="∑" FontSize="36" Foreground="Red"
                        FontWeight="ExtraBold" />
                    <TextBlock Margin="10,0,0,0" FontSize="68" Text="{x:Bind Player.GameData.Resources.TotalResources.Count, Mode=OneWay, FallbackValue=68}" Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}" />
                    <!--  Gold Cards  -->
                    <local:ResourceCardSlimCtrl Margin="30,0,0,0" Image="{StaticResource ResourceType.GoldMine}" CountVisible="False" />
                    <TextBlock Margin="-68,-8,0,0" Text="∑" FontSize="36" Foreground="Red"
                        FontWeight="ExtraBold" />
                    <TextBlock Margin="10,0,0,0" FontSize="68" Text="{x:Bind Player.GameData.Resources.GoldTotal, Mode=OneWay, FallbackValue=0}" Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}" />
                    <!--  Longest Road  -->
                    <TextBlock Margin="30,0,5,0" Text="⛐" FontFamily="Segoe UI Symbol" FontSize="68"
                        Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}" />
                    <TextBlock Text="{x:Bind Player.GameData.LongestRoad, Mode=OneWay, FallbackValue=12}" FontSize="68" Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}" />
                    <TextBlock Margin="3,0,0,0" Text="✔" FontSize="68"
                        Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}"
                        Visibility="{x:Bind Player.GameData.HasLongestRoad, FallbackValue=Visible, Mode=OneWay, Converter={StaticResource ResourceKey=BoolToVisibilityConverter}}" />
                    <!--  Largest Army  -->
                    <TextBlock Margin="30,0,5,0" Text="♞" FontFamily="Segoe UI Symbol" FontSize="68"
                        Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}" />
                    <TextBlock FontSize="68" Text="{x:Bind Player.GameData.Resources.KnightsPlayed, Mode=OneWay, FallbackValue=12}" Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}" />
                    <TextBlock Margin="3,0,0,0" Text="✔" FontSize="68"
                        Visibility="{x:Bind Player.GameData.LargestArmy, FallbackValue=Visible, Mode=OneWay, Converter={StaticResource ResourceKey=BoolToVisibilityConverter}}"
                        Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}" />
                    <TextBlock Margin="30,0,5,0" Text="⛏" FontSize="68" IsColorFontEnabled="False"
                        Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}" />
                    <TextBlock FontSize="68" Text="{x:Bind Player.GameData.Resources.UnspentEntitlements.Count, Mode=OneWay, FallbackValue=12}" Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}" />
                </StackPanel>
            </Viewbox>
            <!--  Third Row  -->
            <Viewbox Grid.Row="2" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="2"
                Margin="4" HorizontalAlignment="Left" VerticalAlignment="Center">
                <GridView Grid.Row="0" Grid.RowSpan="1" Grid.Column="1" Margin="0,5,0,0"
                    HorizontalAlignment="Left" VerticalAlignment="Stretch" Background="Transparent"
                    SelectionMode="None" ScrollViewer.VerticalScrollBarVisibility="Disabled"
                    BorderBrush="{StaticResource bmMaple}"
                    BorderThickness="0"
                    ItemsSource="{x:Bind Player.GameData.Resources.ResourcesThisTurn2}">
                    <GridView.ItemTemplate>
                        <DataTemplate x:DataType="local:ResourceCardModel">
                            <Viewbox>
                                <local:ResourceCardCtrl ResourceCardModel="{x:Bind}" Orientation="{x:Bind CountToOrientation(Count), Mode=OneWay}" MainPageModel="{Binding Path=MainPageModel, ElementName=MainPage.Current.MainPageModel, Mode=OneWay}" />
                            </Viewbox>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                    <GridView.ItemContainerStyle>
                        <Style TargetType="GridViewItem">
                            <Setter Property="Margin" Value="0,5,0,0" />
                            <Setter Property="Padding" Value="0" />
                        </Style>
                    </GridView.ItemContainerStyle>
                </GridView>
            </Viewbox>
            <Viewbox Grid.Row="2" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="2"
                Margin="0,0,-10,0" HorizontalAlignment="Right" VerticalAlignment="Center">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <local:CityCtrl Width="30" Height="30" Margin="0,0,0,0" Owner="{x:Bind Player, Mode=OneWay}" />
                        <TextBlock Margin="10,0,0,0" Text="{x:Bind UnplayedResourceCount(Player.GameData.Resources.UnspentEntitlements, 'City'), Mode=OneWay}" FontSize="22" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <local:SettlementCtrl Width="30" Height="30" Owner="{x:Bind Player, Mode=OneWay}" />
                        <TextBlock Margin="10,0,0,0" Text="{x:Bind UnplayedResourceCount(Player.GameData.Resources.UnspentEntitlements, 'Settlement'), Mode=OneWay}" FontSize="22" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Grid Width="30" Background="Transparent">
                            <Ellipse Width="30" Height="30" StrokeThickness="0"
                                Stroke="{x:Bind Player.ForegroundBrush}"
                                Fill="{x:Bind Player.BackgroundBrush}" />
                            <Viewbox Width="60" Height="30" HorizontalAlignment="Center">
                                <local:RoadCtrl Grid.Column="0" Width="50" Height="30" Margin="0,0,2,0"
                                    Owner="{x:Bind Player, Mode=OneWay}"
                                    Location="Top" RenderTransformOrigin=".5 .5">
                                    <local:RoadCtrl.RenderTransform>
                                        <CompositeTransform Rotation="90" TranslateX="6" TranslateY="1" ScaleX=".75"
                                            ScaleY=".75" />
                                    </local:RoadCtrl.RenderTransform>
                                </local:RoadCtrl>
                            </Viewbox>
                        </Grid>
                        <TextBlock Margin="10,0,0,0" Text="{x:Bind UnplayedResourceCount(Player.GameData.Resources.UnspentEntitlements, 'Road'), Mode=OneWay}" FontSize="22" />
                    </StackPanel>
                </StackPanel>
            </Viewbox>
            <!--  <Bottom Row  -->
            <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="10" HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom" Orientation="Horizontal">
                <!--  Current Turn Checkbox  -->
                <TextBlock Margin="0" HorizontalAlignment="Left" Text="&#x2714;" FontSize="35"
                    Visibility="{x:Bind Player.GameData.IsCurrentPlayer, Mode=OneWay, Converter={StaticResource ResourceKey=BoolToVisibilityConverter}}"
                    Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}" />
                <!--  Times Targetted  -->
                <TextBlock Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"
                    FontSize="35" Text="&#xF272;" FontFamily="Segoe MDL2 Assets"
                    Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}" />
                <TextBlock Margin="2,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center"
                    FontSize="35"
                    Text="{x:Bind Player.GameData.TimesTargeted, Mode=OneWay, FallbackValue=0}"
                    Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}"
                    FontFamily="Century Schoolbook" />
                <!--  Cards lost to Baron  -->
                <Viewbox Margin="0,0,0,0">
                    <local:ResourceCardSlimCtrl Width="70" Height="100" Margin="10,0,0,0"
                        Image="{StaticResource ResourceType.Back}"
                        CountVisible="False" />
                </Viewbox>
                <local:BaronCtrl Width="25" Height="25" Margin="-20,20,0,0" VerticalAlignment="Center" />
                <TextBlock Margin="2,0,5,0" HorizontalAlignment="Left" VerticalAlignment="Center"
                    FontSize="35"
                    Text="{x:Bind Player.GameData.Resources.ResourcesLostToBaron.Count, Mode=OneWay, FallbackValue=9}"
                    FontFamily="Century Schoolbook"
                    Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}" />
                <!--  No ResourceCount (Bad Rolls)  <Ellipse Stroke="{x:Bind Player.ForegroundBrush, Mode=OneWay}" StrokeThickness="2" />-->
                <Viewbox Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Height="40"
                    Margin="5,0,0,0">
                    <local:ResourceCardSlimCtrl Image="{StaticResource DevCardType.Monopoly}" Count="{x:Bind Player.GameData.Resources.ResourcesLostToMonopoly.Count, Mode=OneWay}" />
                </Viewbox>
                <Grid Width="40" Height="40" Margin="10,0,0,0">
                    <local:DiceCtrl Width="18" Height="18" Margin="8,5,5,5" HorizontalAlignment="Left"
                        VerticalAlignment="Top" Number="4"
                        FillColor="{x:Bind Player.ForegroundBrush, Mode=OneWay}" />
                    <local:DiceCtrl Width="18" Height="18" Margin="5,5,8,3" HorizontalAlignment="Right"
                        VerticalAlignment="Bottom" Number="5"
                        FillColor="{x:Bind Player.ForegroundBrush, Mode=OneWay}"
                        Thickness="4" />
                    <Ellipse Stroke="{x:Bind Player.ForegroundBrush, Mode=OneWay}" StrokeThickness="1" />
                    <Line X1="6" Y1="6" X2="34" Y2="34"
                        Stroke="{x:Bind Player.ForegroundBrush, Mode=OneWay}"
                        StrokeThickness="1" />
                </Grid>
                <TextBlock Margin="2,0,15,0" HorizontalAlignment="Left" VerticalAlignment="Center"
                    FontSize="35"
                    Text="{x:Bind Player.GameData.NoResourceCount, Mode=OneWay, FallbackValue=7}"
                    FontFamily="Century Schoolbook"
                    Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}" />
                <!--  Pips  -->
                <TextBlock Margin="10,-17,0,0" HorizontalAlignment="Left" VerticalAlignment="Center"
                    Text="&#x00B7;" FontFamily="Segoe UI" FontSize="85"
                    CharacterSpacing="0" HorizontalTextAlignment="Left"
                    Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}" />
                <TextBlock Margin="-8,-17,0,0" HorizontalAlignment="Left" VerticalAlignment="Center"
                    Text="&#x00B7;" FontFamily="Segoe UI" FontSize="85"
                    CharacterSpacing="0" HorizontalTextAlignment="Left"
                    Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}" />
                <TextBlock Margin="-8,-17,0,0" HorizontalAlignment="Left" VerticalAlignment="Center"
                    Text="&#x00B7;" FontFamily="Segoe UI" FontSize="85"
                    CharacterSpacing="0" HorizontalTextAlignment="Left"
                    Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}" />
                <TextBlock Margin="2,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center"
                    FontSize="35"
                    Text="{x:Bind Player.GameData.Pips, Mode=OneWay, FallbackValue=0}"
                    Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}"
                    FontFamily="Century Schoolbook" />
            </StackPanel>
            <!--  these 3 grids all need to be exactly the same size so the flip animation looks right  -->
            <Grid Grid.Row="1" Grid.RowSpan="3" Grid.Column="3" Grid.ColumnSpan="1"
                Width="120" Margin="0,10,0,0" HorizontalAlignment="Right"
                VerticalAlignment="Top"
                BorderBrush="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}"
                Background="Transparent" CornerRadius="10" BorderThickness="2">
                <Grid Name="Grid_Stats" Width="110" Margin="0" HorizontalAlignment="Left"
                    VerticalAlignment="Top" Background="Transparent">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="55" />
                        <ColumnDefinition Width="55" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.Projection>
                        <PlaneProjection RotationY="0" />
                    </Grid.Projection>
                    <!--  Card Stats  -->
                    <Viewbox>
                        <TextBlock Grid.Row="0" Grid.Column="0" Margin="0" VerticalAlignment="Center"
                            Text="⚃⚂" FontFamily="Segoe UI Symbol" FontSize="36"
                            ToolTipService.ToolTip="Resources Lost to 7"
                            Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}" />
                    </Viewbox>
                    <Viewbox Grid.Row="0" Grid.Column="1">
                        <TextBlock Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="33"
                            Text="{x:Bind Player.GameData.Resources.ResourcesLostSeven.Count, Mode=OneWay, FallbackValue=88, Converter={StaticResource ResourceKey=IntToStringConverter}}"
                            Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}" />
                    </Viewbox>
                    <Viewbox Grid.Row="1" Grid.Column="0" Margin="0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚃⚁" FontFamily="Segoe UI Symbol" FontSize="32"
                                Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}"
                                HorizontalTextAlignment="Center" />
                            <TextBlock Text="" FontFamily="Segoe UI Symbol" FontSize="18"
                                RenderTransformOrigin=".5 .5"
                                Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}"
                                HorizontalTextAlignment="Center">
                                <TextBlock.RenderTransform>
                                    <CompositeTransform Rotation="180" TranslateY="-3" />
                                </TextBlock.RenderTransform>
                            </TextBlock>
                        </StackPanel>
                    </Viewbox>
                    <Viewbox Grid.Row="1" Grid.Column="1" Margin="5">
                        <TextBlock Margin="0" VerticalAlignment="Center" FontSize="22"
                            Text="{x:Bind Player.GameData.MaxNoResourceRolls, Mode=OneWay, FallbackValue=15}"
                            Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}" />
                    </Viewbox>
                    <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,9,0,0" Orientation="Horizontal">
                        <TextBlock HorizontalAlignment="Center" Text="⚃⚁" FontFamily="Segoe UI Symbol"
                            FontSize="22"
                            Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}"
                            ToolTipService.ToolTip="Rolls with Resources" />
                        <TextBlock Margin="0,0,0,0" HorizontalAlignment="Center" Text=""
                            FontFamily="Segoe UI Symbol" FontSize="12"
                            Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}"
                            ToolTipService.ToolTip="Rolls with Resources" />
                    </StackPanel>
                    <Viewbox Grid.Row="2" Grid.Column="1" Margin="5">
                        <TextBlock Margin="0" VerticalAlignment="Center" FontSize="22"
                            Text="{x:Bind Player.GameData.RollsWithResource, Mode=OneWay, FallbackValue=5}"
                            Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}" />
                    </Viewbox>
                </Grid>
                <Grid Name="Grid_Roll" Width="100" Margin="0" HorizontalAlignment="Center"
                    VerticalAlignment="Center" Background="Black">
                    <Grid.Projection>
                        <PlaneProjection RotationY="90" />
                    </Grid.Projection>
                    <GridView Name="GridView_Rolls" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                        Background="Transparent"
                        ItemsSource="{x:Bind Player.GameData.SyncronizedPlayerRolls.LatestRolls, Mode=OneWay}"
                        SelectionMode="None">
                        <GridView.ItemTemplate>
                            <DataTemplate x:DataType="local:RollModel">
                                <local:RollCtrl Width="48" Margin="1"
                                    Roll="{x:Bind}"
                                    Orientation="{x:Bind Orientation, Mode=OneWay}"
                                    CornerRadius="10" />
                            </DataTemplate>
                        </GridView.ItemTemplate>
                        <GridView.ItemContainerStyle>
                            <Style TargetType="GridViewItem">
                                <Setter Property="Margin" Value="0" />
                                <Setter Property="Padding" Value="0" />
                            </Style>
                        </GridView.ItemContainerStyle>
                    </GridView>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</UserControl>
