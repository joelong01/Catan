                    </Grid>
                    <TextBlock Margin="2,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="Century Schoolbook" FontSize="35" Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}" Text="{x:Bind Player.GameData.NoResourceCount, Mode=OneWay, FallbackValue=7}" />
                    <!--  Pips  -->
                    <TextBlock Margin="10,-17,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" CharacterSpacing="0" FontFamily="Segoe UI" FontSize="85" Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}" HorizontalTextAlignment="Left" Text="&#x00B7;" />
                    <TextBlock Margin="-8,-17,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" CharacterSpacing="0" FontFamily="Segoe UI" FontSize="85" Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}" HorizontalTextAlignment="Left" Text="&#x00B7;" />
                    <TextBlock Margin="-8,-17,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" CharacterSpacing="0" FontFamily="Segoe UI" FontSize="85" Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}" HorizontalTextAlignment="Left" Text="&#x00B7;" />
                    <TextBlock Margin="2,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="Century Schoolbook" FontSize="35" Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}" Text="{x:Bind Player.GameData.Pips, Mode=OneWay, FallbackValue=0}" />
                </StackPanel>
            </Grid>
        </Border>
    </Viewbox>
</UserControl>
