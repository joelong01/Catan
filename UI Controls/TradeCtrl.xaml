<UserControl x:Class="Catan10.TradeCtrl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Catan10"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="510" d:DesignWidth="1110" mc:Ignorable="d">

    <Grid Margin="0" BorderThickness="3" CornerRadius="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="380" />
            <RowDefinition Height="80" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="480" />
            <ColumnDefinition Width="60" />
            <ColumnDefinition Width="470" />
        </Grid.ColumnDefinitions>
        <Border HorizontalAlignment="Left">
            <ToggleSwitch Margin="0,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center"
                Style="{StaticResource CatanToggleSwitch}"
                IsOn="{x:Bind TradeWithEverybody, Mode=TwoWay}"
                Foreground="Black">
                <ToggleSwitch.Header>
                    <TextBlock Text="Trade With..." Foreground="Black" />
                </ToggleSwitch.Header>
                <ToggleSwitch.OnContent>
                    <TextBlock Margin="-5,-4,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Text=" Everybody" />
                </ToggleSwitch.OnContent>
                <ToggleSwitch.OffContent>
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="30" Height="30" Margin="0" HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Fill="{x:Bind TradePartner.ImageBrush, Mode=OneWay}" />
                        <TextBlock Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                            Foreground="{x:Bind CurrentPlayer.ForegroundBrush, Mode=OneWay}"
                            Text="{x:Bind TradePartner.PlayerName, Mode=OneWay}" />
                    </StackPanel>
                </ToggleSwitch.OffContent>
            </ToggleSwitch>
        </Border>
        <!--  Players  -->
        <GridView Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Center"
            VerticalAlignment="Stretch"
            ItemsSource="{x:Bind ExceptMe(PlayingPlayers), Mode=OneWay}"
            ScrollViewer.VerticalScrollBarVisibility="Disabled" SelectionMode="None">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="local:PlayerModel">
                    <StackPanel Orientation="Horizontal">
                        <ToggleButton Width="50" Height="50" Padding="0">
                            <ToggleButton.Content>
                                
                                    <Ellipse Margin="0" Width="45" Height="45" HorizontalAlignment="Center" VerticalAlignment="Center"
                                        Fill="{x:Bind ImageBrush, Mode=OneWay}"
                                        PointerPressed="OnPlayerPressed" Stroke="White"
                                        Tag="{x:Bind PlayerDataInstance, Mode=OneWay}" />
                                
                            </ToggleButton.Content>
                        </ToggleButton>
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
        <local:OfferCtrl Grid.Row="1" Grid.Column="0" Margin="5,0,0,0" HorizontalAlignment="Stretch"
            CurrentPlayer="{x:Bind CurrentPlayer, Mode=OneWay}"
            TradePartner="{x:Bind TradePartner, Mode=OneWay}" />

    </Grid>

</UserControl>
