<UserControl x:Class="Catan10.PrivateDataCtrl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Catan10" xmlns:proxy="using:Catan.Proxy"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300" d:DesignWidth="600" mc:Ignorable="d">

    <Control.Resources>
        <LinearGradientBrush x:Key="lgbTest" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="White" />
            <GradientStop Offset="1" Color="DarkSalmon" />
            <GradientStop Offset="1" Color="Black" />
        </LinearGradientBrush>
        <Style x:Key="ButtonTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="{x:Bind Player.ForegroundBrush, Mode=OneWay}" />
            <Setter Property="HorizontalAlignment" Value="Center" />

        </Style>
    </Control.Resources>

    <Grid Width="475" Height="305" Background="{StaticResource TransparentBrush}" CornerRadius="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="0" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40*" />
            <ColumnDefinition Width="115" />
            <ColumnDefinition Width="0" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Margin="5,5,0,0">
            <StackPanel Orientation="Horizontal">
                <local:ResourceCardCtrl Margin="0" ResourceType="Wood" Orientation="FaceUp" ReadOnly="True"
                    Count="{x:Bind Player.GameData.Resources.Current.Wood, Mode=OneWay}" />
                <local:ResourceCardCtrl Margin="1,0,0,0" ResourceType="Brick" Orientation="FaceUp" ReadOnly="True"
                    Count="{x:Bind Player.GameData.Resources.Current.Brick, Mode=OneWay}" />
                <local:ResourceCardCtrl Margin="1,0,0,0" ResourceType="Wheat" Orientation="FaceUp" ReadOnly="True"
                    Count="{x:Bind Player.GameData.Resources.Current.Wheat, Mode=OneWay}" />
                <local:ResourceCardCtrl Margin="1,0,0,0" ResourceType="Sheep" Orientation="FaceUp" ReadOnly="True"
                    Count="{x:Bind Player.GameData.Resources.Current.Sheep, Mode=OneWay}" />
                <local:ResourceCardCtrl Margin="1,0,0,0" ResourceType="Ore" Orientation="FaceUp" ReadOnly="True"
                    Count="{x:Bind Player.GameData.Resources.Current.Ore, Mode=OneWay}" />
                <local:ResourceCardCtrl Margin="39,0,0,0" ResourceType="GoldMine" Orientation="FaceUp" ReadOnly="True"
                    Count="{x:Bind Player.GameData.Resources.Current.GoldMine, Mode=OneWay}" />
            </StackPanel>
            <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                <Button Padding="0">
                    <Button.Content>
                        <local:ResourceCardCtrl Margin="1,0,0,0" DevCardType="Knight" Orientation="FaceUp" ReadOnly="True"
                            Count="{x:Bind Player.GameData.Resources.UnplayedKnights, Mode=OneWay}" />
                    </Button.Content>
                    <Button.ContextFlyout>
                        <MenuFlyout>
                            <MenuFlyoutItem Text="Play" />
                        </MenuFlyout>
                    </Button.ContextFlyout>
                </Button>
                <local:ResourceCardCtrl Margin="1,0,0,0" DevCardType="YearOfPlenty" Orientation="FaceUp" ReadOnly="True"
                    Count="{x:Bind Player.GameData.Resources.UnplayedYearOfPlenty, Mode=OneWay}" />
                <local:ResourceCardCtrl Margin="1,0,0,0" DevCardType="Monopoly" Orientation="FaceUp" ReadOnly="True"
                    Count="{x:Bind Player.GameData.Resources.UnplayedMonopoly, Mode=OneWay}" />
                <local:ResourceCardCtrl Margin="1,0,0,0" DevCardType="RoadBuilding" Orientation="FaceUp" ReadOnly="True"
                    Count="{x:Bind Player.GameData.Resources.UnplayedRoadBuilding, Mode=OneWay}" />
                <local:ResourceCardCtrl Margin="109,0,0,0" DevCardType="VictoryPoint" Orientation="FaceUp"
                    ReadOnly="True"
                    Count="{x:Bind Player.GameData.Resources.VictoryPoints, Mode=OneWay}" />

            </StackPanel>
            <Rectangle Width="465" Height="4" Margin="0,5,0,5" Fill="{x:Bind Player.BackgroundBrush, Mode=OneWay}" />

            <StackPanel Margin="0,-4,0,0" HorizontalAlignment="Center" Orientation="Horizontal"
                Background="{x:Bind Player.BackgroundBrush, Mode=OneWay}"
                BorderBrush="{x:Bind Player.BackgroundBrush, Mode=OneWay}"
                BorderThickness="2" CornerRadius="10">
                <Button Margin="5,0,5,0" Padding="0" Background="Transparent" ToolTipService.ToolTip="Buy Settlement">
                    <Button.Content>
                        <StackPanel Padding="0" CornerRadius="10">
                            <Viewbox Margin="0,0,0,0">
                                <local:SettlementCtrl Width="50" Height="50" Margin="5,0,0,0" Owner="{x:Bind Player, Mode=OneWay}" />
                            </Viewbox>
                            <TextBlock Text="Settlement" Style="{StaticResource ButtonTextStyle}" />
                        </StackPanel>
                    </Button.Content>
                </Button>
                <Button Margin="5,0,5,0" Padding="0" Background="Transparent" ToolTipService.ToolTip="Buy City">
                    <Button.Content>
                        <StackPanel>
                            <Viewbox Margin="0,0,0,0">
                                <local:CityCtrl Width="50" Height="50" Margin="5,0,0,0" Owner="{x:Bind Player, Mode=OneWay}" />
                            </Viewbox>
                            <TextBlock Margin="5,0,0,0" HorizontalAlignment="Center" Text="City" Style="{StaticResource ButtonTextStyle}" />
                        </StackPanel>
                    </Button.Content>
                </Button>
                <Button Margin="5,0,5,0" Padding="0" Background="Transparent" ToolTipService.ToolTip="Buy Road">
                    <Button.Content>
                        <StackPanel Background="{x:Bind Player.BackgroundBrush, Mode=OneWay}">
                            <local:RoadCtrl Grid.Column="0" Width="50" Height="30" Margin="0,0,2,20"
                                Owner="{x:Bind Player, Mode=OneWay}"
                                Location="Top" RenderTransformOrigin=".5 .5">
                                <local:RoadCtrl.RenderTransform>
                                    <CompositeTransform Rotation="90" TranslateX="10" TranslateY="12" ScaleY="1.5"
                                        ScaleX="1.4" />
                                </local:RoadCtrl.RenderTransform>
                            </local:RoadCtrl>
                            <TextBlock Margin="0,0,0,0" Text="Road" Style="{StaticResource ButtonTextStyle}" />
                        </StackPanel>
                    </Button.Content>
                </Button>

                <Button Margin="5,0,5,0" Padding="0" Background="Transparent"
                    ToolTipService.ToolTip="Buy Dev Card" ToolTipService.Placement="Left">
                    <Button.Content>
                        <Viewbox>
                            <StackPanel Width="50" Height="60">
                                <Rectangle Width="30" Height="45" RadiusX="5" RadiusY="5"
                                    Fill="{StaticResource bmDevCardBack}" />
                                <TextBlock Text="Dev Card" Style="{StaticResource ButtonTextStyle}" />
                            </StackPanel>
                        </Viewbox>
                    </Button.Content>
                </Button>
                <Button Margin="5,0,5,0" Padding="0" VerticalAlignment="Center"
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                    ToolTipService.ToolTip="Trade" Background="Transparent">
                    <Button.Content>
                        <StackPanel Background="{x:Bind Player.BackgroundBrush, Mode=OneWay}">
                            <TextBlock Grid.Column="0" Margin="0,0,0,0" HorizontalAlignment="Center"
                                VerticalAlignment="Top" Text="⇄" FontFamily="Segoe UI Symbol" FontSize="38"
                                Foreground="{x:Bind Player.ForegroundBrush, Mode=OneWay, FallbackValue=White}">
                                <TextBlock.RenderTransform>
                                    <CompositeTransform TranslateY="-5" />
                                </TextBlock.RenderTransform>
                            </TextBlock>
                            <TextBlock HorizontalAlignment="Center" Text="Trade" Style="{StaticResource ButtonTextStyle}" />
                        </StackPanel>
                    </Button.Content>
                </Button>

            </StackPanel>
        </StackPanel>


    </Grid>
</UserControl>
