<UserControl x:Class="Catan10.PrivateDataCtrl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Catan10" xmlns:proxy="using:Catan.Proxy"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300" d:DesignWidth="600" mc:Ignorable="d">


    <Grid Width="475" Height="295" Background="{StaticResource TransparentBrush}" CornerRadius="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="0" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40*" />
            <ColumnDefinition Width="105" />
            <ColumnDefinition Width="0" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Margin="5,5,0,0">
            <StackPanel Orientation="Horizontal">
                <local:ResourceCardCtrl Margin="0" ResourceType="Wood" Orientation="FaceUp" ReadOnly="True"
                    Count="{x:Bind Player.GameData.PlayerResources.Wood, Mode=OneWay}" />
                <local:ResourceCardCtrl Margin="1,0,0,0" ResourceType="Brick" Orientation="FaceUp" ReadOnly="True"
                    Count="{x:Bind Player.GameData.PlayerResources.Brick, Mode=OneWay}" />
                <local:ResourceCardCtrl Margin="1,0,0,0" ResourceType="Wheat" Orientation="FaceUp" ReadOnly="True"
                    Count="{x:Bind Player.GameData.PlayerResources.Wheat, Mode=OneWay}" />
                <local:ResourceCardCtrl Margin="1,0,0,0" ResourceType="Sheep" Orientation="FaceUp" ReadOnly="True"
                    Count="{x:Bind Player.GameData.PlayerResources.Sheep, Mode=OneWay}" />
                <local:ResourceCardCtrl Margin="1,0,0,0" ResourceType="Ore" Orientation="FaceUp" ReadOnly="True"
                    Count="{x:Bind Player.GameData.PlayerResources.Ore, Mode=OneWay}" />
                <local:ResourceCardCtrl Margin="39,0,0,0" ResourceType="GoldMine" Orientation="FaceUp" ReadOnly="True"
                    Count="{x:Bind Player.GameData.PlayerResources.GoldMine, Mode=OneWay}" />
            </StackPanel>
            <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                <Button Padding="0">
                    <Button.Content>
                        <local:ResourceCardCtrl Margin="1,0,0,0" DevCardType="Knight" Orientation="FaceUp" ReadOnly="True"
                            Count="{x:Bind Player.GameData.PlayerResources.Knights, Mode=OneWay}" />
                    </Button.Content>
                    <Button.ContextFlyout>
                        <MenuFlyout>
                            <MenuFlyoutItem Text="Play" />
                        </MenuFlyout>
                    </Button.ContextFlyout>
                </Button>
                <local:ResourceCardCtrl Margin="1,0,0,0" DevCardType="YearOfPlenty" Orientation="FaceUp" ReadOnly="True"
                    Count="{x:Bind Player.GameData.PlayerResources.YearOfPlenty, Mode=OneWay}" />
                <local:ResourceCardCtrl Margin="1,0,0,0" DevCardType="Monopoly" Orientation="FaceUp" ReadOnly="True"
                    Count="{x:Bind Player.GameData.PlayerResources.Monopoly, Mode=OneWay}" />
                <local:ResourceCardCtrl Margin="1,0,0,0" DevCardType="RoadBuilding" Orientation="FaceUp" ReadOnly="True"
                    Count="{x:Bind Player.GameData.PlayerResources.RoadBuilding, Mode=OneWay}" />
                <local:ResourceCardCtrl Margin="109,0,0,0" DevCardType="VictoryPoint" Orientation="FaceUp"
                    ReadOnly="True"
                    Count="{x:Bind Player.GameData.PlayerResources.VictoryPoints, Mode=OneWay}" />

            </StackPanel>
            <Rectangle Width="465" Height="2" Margin="0,5,0,5" Fill="{StaticResource WhiteBrush}" />

            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Background="{x:Bind Path=Player.GameData.ForegroundBrush, Mode=OneWay}">
                <Button Margin="5,0,5,0" Padding="0" Background="Transparent" ToolTipService.ToolTip="Buy Settlement">
                    <Button.Content>
                        <Grid>
                            <Viewbox Margin="0,0,0,0">
                                <local:SettlementCtrl Width="50" Height="50" Margin="5,0,0,0" PlayerColor="{x:Bind Player.GameData.BackgroundBrush, FallbackValue=Black, Mode=OneWay}" />
                            </Viewbox>
                        </Grid>
                    </Button.Content>
                </Button>
                <Button Margin="5,0,5,0" Padding="0" Background="Transparent" ToolTipService.ToolTip="Buy City">
                    <Button.Content>
                        <Grid>
                            <Viewbox Margin="0,0,0,0">
                                <local:CityCtrl Width="50" Height="50" Margin="5,0,0,0" PlayerColor="{x:Bind Player.GameData.BackgroundBrush, FallbackValue=Black, Mode=OneWay}" />
                            </Viewbox>
                        </Grid>
                    </Button.Content>
                </Button>
                <Button Margin="5,0,5,0" Padding="0" Background="Transparent" ToolTipService.ToolTip="Buy Road">
                    <Button.Content>
                        <Grid Background="{x:Bind Player.GameData.BackgroundBrush, Mode=OneWay}">
                            <TextBlock Grid.Column="0" Margin="0" HorizontalAlignment="Center"
                                VerticalAlignment="Center" Text="⛙" FontFamily="Segoe UI Symbol" FontSize="38"
                                Foreground="{x:Bind Player.GameData.ForegroundBrush, Mode=OneWay, FallbackValue=White}">
                                <TextBlock.RenderTransform>
                                    <CompositeTransform TranslateY="-2" />
                                </TextBlock.RenderTransform>
                            </TextBlock>
                        </Grid>
                    </Button.Content>
                </Button>

                <Button Margin="5,0,5,0" Padding="0" Background="Transparent"
                    ToolTipService.ToolTip="Buy Dev Card" ToolTipService.Placement="Left">
                    <Button.Content>
                        <Grid Width="40" Height="60" Padding="0" CornerRadius="5"
                            Background="{StaticResource bmDevCardBack}" />
                    </Button.Content>
                </Button>
                <Button Margin="5,0,5,0" Padding="0" VerticalAlignment="Center"
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                    ToolTipService.ToolTip="Trade" Background="Transparent">
                    <Button.Content>
                        <Grid Background="{x:Bind Player.GameData.BackgroundBrush, Mode=OneWay}">
                            <TextBlock Grid.Column="0" Margin="0,0,0,0" HorizontalAlignment="Center"
                                VerticalAlignment="Top" Text="⇄" FontFamily="Segoe UI Symbol" FontSize="38"
                                Foreground="{x:Bind Player.GameData.ForegroundBrush, Mode=OneWay, FallbackValue=White}">
                                <TextBlock.RenderTransform>
                                    <CompositeTransform TranslateY="-5" />
                                </TextBlock.RenderTransform>
                            </TextBlock>
                        </Grid>
                    </Button.Content>
                </Button>

            </StackPanel>
        </StackPanel>


    </Grid>
</UserControl>
