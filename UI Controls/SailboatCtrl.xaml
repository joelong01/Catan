<UserControl x:Class="Catan10.SailboatCtrl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Catan10"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="30" d:DesignWidth="30" mc:Ignorable="d">

    <Grid>
        <Ellipse Width="30" Height="30" Fill="{x:Bind CircleColor, Mode=OneWay, FallbackValue=White, Converter={StaticResource ColorToBrushConverter}}" />
        <Ellipse Width="30" Height="30">
            <Ellipse.Fill>
                <ImageBrush x:Name="ImageBrush_Sailboat" Stretch="Uniform" ImageSource="ms-appx:///Assets/sailboat_dark.png" />
            </Ellipse.Fill>
        </Ellipse>
    </Grid>
</UserControl>
