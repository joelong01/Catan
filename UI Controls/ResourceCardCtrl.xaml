<UserControl x:Class="Catan10.ResourceCardCtrl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Catan10"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="100" d:DesignWidth="70" mc:Ignorable="d">
    <Control.Resources>
        <Storyboard x:Name="_sbFlipTile">
            <DoubleAnimation x:Name="_daFlipBackCard"
                Storyboard.TargetProperty="(UIElement.Projection).(PlaneProjection.RotationY)"
                Storyboard.TargetName="_gridBack" To="-90" Duration="0:0:2" />
            <DoubleAnimation x:Name="_daFlipFrontCard"
                Storyboard.TargetProperty="(UIElement.Projection).(PlaneProjection.RotationY)"
                Storyboard.TargetName="_gridFront" To="0" Duration="0:0:2" />
        </Storyboard>
    </Control.Resources>


    <Grid Name="LayoutRoot" Width="70" Height="100">
        <Grid Name="_gridBack" CornerRadius="10" BorderBrush="White" BorderThickness="1"
            Background="{StaticResource bmResourceCardBack}">
            <Grid.Projection>
                <PlaneProjection x:Name="_ppBack" RotationY="90" />
            </Grid.Projection>

        </Grid>

        <Grid Name="_gridFront" CornerRadius="10" BorderBrush="Black" BorderThickness="1"
            Background="{Binding ShownImage, Mode=OneWay, FallbackValue={StaticResource bmResourceCardOre}}"
            Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="15*" />
                <RowDefinition Height="10*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.Projection>
                <PlaneProjection x:Name="_ppFront" RotationY="0" />
            </Grid.Projection>


            <Grid Grid.RowSpan="3" Grid.ColumnSpan="3" Width="19" Height="33"
                HorizontalAlignment="Right" VerticalAlignment="Bottom" CornerRadius="5"
                Background="Black"
                Visibility="{x:Bind CountVisible, Mode=OneWay}">
                <Viewbox>
                    <TextBlock Margin="2,-4,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"
                        Text="{x:Bind Count, Mode=OneWay, FallbackValue=0, Converter={StaticResource StringToIntConverter}}"
                        FontSize="30"
                        Foreground="{StaticResource YellowBrush}" />
                </Viewbox>
            </Grid>


            <Viewbox Grid.Row="0" Grid.RowSpan="3" Grid.Column="0" Margin="0,0,0,0"
                HorizontalAlignment="Left" VerticalAlignment="Top">
                <TextBox x:Name="_txtCount" Margin="0,0,0,0" HorizontalAlignment="Left"
                    VerticalAlignment="Center" VerticalContentAlignment="Center"
                    Visibility="Collapsed" Foreground="Yellow" GotFocus="Text_GotFocus"
                    RequestedTheme="Dark" TextAlignment="Center" CharacterSpacing="0" FontSize="40"
                    IsReadOnly="{x:Bind ReadOnly, Mode=OneWay}"
                    Text="{x:Bind Count, Mode=TwoWay, FallbackValue=0, Converter={StaticResource StringToIntConverter}}"
                    BorderBrush="{StaticResource TransparentBrush}"
                    Background="{StaticResource BlackBrush}" />

            </Viewbox>
            <Ellipse x:Name="HarborEllipse" Grid.ColumnSpan="2" Width="30" Height="30"
                HorizontalAlignment="Center" VerticalAlignment="Top"
                Fill="{Binding HarborType, Converter={StaticResource HarborTypeToHarborBrushConverter}, FallbackValue={StaticResource bmThreeForOne}, Mode=OneWay}"
                Stroke="Red" StrokeThickness="2"
                Visibility="{x:Bind HarborVisibility, Mode=OneWay, FallbackValue=Collapsed}" />

        </Grid>

    </Grid>

</UserControl>
