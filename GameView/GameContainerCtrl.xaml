<UserControl x:Class="Catan10.GameContainerCtrl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="using:Catan10" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:media="using:Microsoft.UI.Xaml.Media" d:DesignHeight="1080" mc:Ignorable="d">

    <Viewbox Grid.Column="1" Stretch="Uniform" StretchDirection="Both">
        <Grid x:Name="PanelGrid" Background="{x:Bind CurrentPlayer.BackgroundBrush, Mode=OneWay}">

            <Grid.CacheMode>
                <BitmapCache />
            </Grid.CacheMode>
            <local:RegularGameCtrl x:Name="_game" HorizontalAlignment="Left" />
        </Grid>
    </Viewbox>
</UserControl>
